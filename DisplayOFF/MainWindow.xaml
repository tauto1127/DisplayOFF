<Window x:Class="DisplayOFF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisplayOFF"
        mc:Ignorable="d"
        Title="DisplayOFF" Height="350" Width="350"
        Icon="windowIcon.ico">
    <Grid>
        <StackPanel Margin="30">
            <Button x:Name="offButton" Click="OffButton_OnClick" Height="100">オフ</Button>
            <Button x:Name="minButton" Margin="30" Click="MinButton_OnClick" Height="40">タスクトレイに常駐させる</Button>
            <Label x:Name="Label">Win + O　でもできます</Label>
        </StackPanel>
    </Grid>
</Window>
